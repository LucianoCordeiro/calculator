<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintStart_toStartOf="@+id/button4" android:minWidth="48dp"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/button"
            android:layout_marginStart="24dp" app:layout_constraintBaseline_toBaselineOf="@+id/button"
            android:minWidth="48dp"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginStart="24dp" app:layout_constraintBaseline_toBaselineOf="@+id/button2"
            android:minWidth="48dp"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button7" app:layout_constraintStart_toStartOf="@+id/button7"
            android:minWidth="48dp"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            app:layout_constraintStart_toEndOf="@+id/button4"
            android:layout_marginStart="24dp" app:layout_constraintBaseline_toBaselineOf="@+id/button4"
            android:minWidth="48dp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button5"
            android:layout_marginStart="24dp" app:layout_constraintBaseline_toBaselineOf="@+id/button5"
            android:minWidth="48dp"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" android:minWidth="48dp"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            app:layout_constraintStart_toEndOf="@+id/button7"
            android:layout_marginStart="24dp" app:layout_constraintBaseline_toBaselineOf="@+id/button7"
            android:minWidth="48dp"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            app:layout_constraintStart_toEndOf="@+id/button8"
            android:layout_marginStart="24dp" app:layout_constraintBaseline_toBaselineOf="@+id/button8"
            android:minWidth="48dp"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button10"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="@+id/button"
            android:minWidth="48dp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button11"
            app:layout_constraintStart_toEndOf="@+id/button16"
            android:layout_marginStart="24dp" app:layout_constraintBaseline_toBaselineOf="@+id/button16"
            android:minWidth="48dp"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button12"
            app:layout_constraintBaseline_toBaselineOf="@+id/button3" app:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginStart="24dp" android:minWidth="48dp"/>
    <Button
            android:text="x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button13"
            app:layout_constraintStart_toEndOf="@+id/button6"
            android:layout_marginStart="24dp" app:layout_constraintBaseline_toBaselineOf="@+id/button6"
            android:minWidth="48dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button14" android:text="รท"
            app:layout_constraintStart_toEndOf="@+id/button9"
            android:layout_marginStart="24dp" app:layout_constraintBaseline_toBaselineOf="@+id/button9"
            android:minWidth="48dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button15" android:text="="
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button11" app:layout_constraintStart_toStartOf="@+id/button11"
            android:minWidth="48dp"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:minWidth="48dp"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button16"
            app:layout_constraintStart_toEndOf="@+id/button17"
            android:layout_marginStart="24dp" app:layout_constraintBaseline_toBaselineOf="@+id/button17"
            android:minWidth="48dp"/>
    <Button
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button17"
            app:layout_constraintStart_toEndOf="@+id/button10"
            android:layout_marginStart="24dp" app:layout_constraintBaseline_toBaselineOf="@+id/button10"
            android:minWidth="48dp"/>
</android.support.constraint.ConstraintLayout>